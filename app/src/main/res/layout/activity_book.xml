<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/back3"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            android:padding="0dp"
            android:weightSum="8">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:weightSum="4">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"




                    android:shadowColor="#E6B460"
                    android:shadowDx="12"
                    android:shadowDy="12"
                    android:shadowRadius="8"
                    android:textStyle="bold"

                    android:paddingTop ="2dp"

                    android:paddingRight ="4dp"


                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textDirection="rtl"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/writer"
                    android:layout_width="match_parent"

                    android:typeface="monospace"
                    android:shadowColor="#E6B460"
                    android:shadowDx="12"
                    android:shadowDy="12"
                    android:shadowRadius="8"
                    android:textStyle="bold"

                    android:paddingTop ="3dp"
                    android:paddingLeft ="4dp"
                    android:paddingRight ="4dp"
                    android:paddingBottom ="0dp"

                    android:layout_height="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textDirection="rtl"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/publisher"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:typeface="monospace"
                    android:shadowColor="#E6B460"
                    android:shadowDx="12"
                    android:shadowDy="12"
                    android:shadowRadius="8"
                    android:textStyle="bold"

                    android:paddingTop ="3dp"
                    android:paddingLeft ="4dp"
                    android:paddingRight ="4dp"
                    android:paddingBottom ="0dp"

                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textDirection="rtl"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:typeface="monospace"
                    android:shadowColor="#E6B460"
                    android:shadowDx="12"
                    android:shadowDy="12"
                    android:shadowRadius="8"
                    android:textStyle="bold"


                    android:paddingTop ="3dp"
                    android:paddingLeft ="4dp"
                    android:paddingRight ="4dp"
                    android:paddingBottom ="0dp"

                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textDirection="rtl"
                    android:textSize="18sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/title_picture"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:paddingTop ="2dp"
                    android:paddingLeft ="4dp"
                    android:paddingRight ="4dp"
                    android:paddingBottom ="2dp"

                    android:src="@drawable/ic_baseline_title_24"

                    android:layout_marginBottom="0dp"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/writer_picture"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dp"

                    android:src="@drawable/ic_baseline_create_24"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/publisher_picture"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"


                    android:paddingTop ="0dp"
                    android:paddingLeft ="4dp"
                    android:paddingRight ="4dp"
                    android:paddingBottom ="3dp"

                    android:layout_marginBottom="0dp"
                    android:src="@drawable/ic_baseline_location_city_24"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/category_picture"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/ic_baseline_category_24"
                    android:layout_weight="1" />

            </LinearLayout>

            <ImageView
                android:id="@+id/book_picture"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="2" />
        </LinearLayout>


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:background="@drawable/backtext"
            android:textAlignment="textStart"
            android:textDirection="ltr" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="#223D8C"
            app:rippleColor="#ffee33"

            app:strokeColor="#13ACD1"
            app:strokeWidth="3dp"
            android:layout_marginTop="5dp"
            android:text="رفتن به آگهی ها"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="@drawable/backtext"
                android:orientation="vertical"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/related_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="3" />

                <TextView
                    android:id="@+id/related_text_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:shadowColor="#E6B460"
                    android:shadowDx="12"
                    android:shadowDy="12"
                    android:shadowRadius="8"
                    android:textStyle="bold"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:textDirection="rtl" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="@drawable/backtext"
                android:orientation="vertical"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/related_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="3" />

                <TextView
                    android:id="@+id/related_text_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:shadowColor="#E6B460"
                    android:shadowDx="12"
                    android:shadowDy="12"
                    android:shadowRadius="8"
                    android:textStyle="bold"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:textDirection="rtl" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="@drawable/backtext"
                android:orientation="vertical"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/related_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="3" />

                <TextView
                    android:id="@+id/related_text_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:shadowColor="#E6B460"
                    android:shadowDx="12"
                    android:shadowDy="12"
                    android:shadowRadius="8"
                    android:textStyle="bold"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:textDirection="rtl" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="@drawable/backtext"
                android:orientation="vertical"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/related_image_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="3" />

                <TextView
                    android:id="@+id/related_text_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:shadowColor="#E6B460"
                    android:shadowDx="12"
                    android:shadowDy="12"
                    android:shadowRadius="8"
                    android:textStyle="bold"

                    android:layout_marginBottom="0dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:textDirection="rtl" />
            </LinearLayout>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comments_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            android:weightSum="10">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/comments"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:hint="متن نظر را وارد کنید"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/comment_edit_text"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/adComment"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                app:backgroundTint="#223D8C"
                app:rippleColor="#ffee33"

                app:strokeColor="#13ACD1"
                app:strokeWidth="3dp"

                android:layout_marginBottom="0dp"
                android:layout_weight="2"
                android:background="@color/button_color"
                android:text="@string/add_comment"
                android:textAlignment="center"

                android:textDirection="rtl"
                 />
        </LinearLayout>


    </LinearLayout>

</ScrollView>